{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>neoforged/actions:renovate_preset"
  ],
  "bumpVersions": [
    {
      "name": "Updating version",
      "filePatterns": ["build.gradle"],
      "bumpType": "patch",
      "matchStrings": ["^version\\s*=?\\s*'(?<version>.+)'$"]
    }
  ]
}
